// Simple Motor Test Code
// Connect motor through L298N or L293D driver
// IN1 → Pin 3 (PWM) | IN2 → Pin 4

int motorPin1 = 3;   // PWM pin (speed)
int motorPin2 = 4;   // Direction pin

void setup() {
  pinMode(motorPin1, OUTPUT);
  pinMode(motorPin2, OUTPUT);
  Serial.begin(9600);
  Serial.println("Starting motor test...");
}

void loop() {
  Serial.println("Motor FORWARD at half speed");
  digitalWrite(motorPin2, LOW);   // Direction
  analogWrite(motorPin1, 128);    // 0–255 speed (128 = half)
  delay(2000);

  Serial.println("Motor FORWARD at full speed");
  analogWrite(motorPin1, 255);
  delay(2000);

  Serial.println("Motor STOP");
  analogWrite(motorPin1, 0);
  delay(1000);

  Serial.println("Motor REVERSE");
  digitalWrite(motorPin2, HIGH);
  analogWrite(motorPin1, 200);
  delay(2000);

  Serial.println("Motor STOP");
  analogWrite(motorPin1, 0);
  delay(3000);
}
